#!/usr/bin/make -f

export DH_VERBOSE=1

DEB_BUILD_ROOT := $(shell pwd)/debian/$(shell dh_listpackages)

%:
	dh $@

override_dh_auto_build:
	$(shell git submodule update --init)
	CC=/usr/bin/gcc-4.7 CXX=/usr/bin/g++-4.7 cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX:PATH=/opt/topsy . 
	make rl-proxy rl-keygen credit-server keygen -j4

override_dh_auto_install:
	DESTDIR=${DEB_BUILD_ROOT} cmake -P cmake_install.cmake
